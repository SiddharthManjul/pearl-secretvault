{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PEARL User Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "user_did": {
        "type": "string"
      },
      "private_key": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "email": {
        "type": "string",
        "format": "email"
      },
      "chat_id": {
        "type": "array",
        "items": {
          "type": "object",
          "title": "chat"
        }
      },
      "created_at": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": ["_id", "user_did", "private_key", "email"]
  }
}
